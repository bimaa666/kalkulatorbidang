<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Lingkaran">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:text="LINGKARAN"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/diameter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan Diameter Lingkaran:"
        android:inputType="numberDecimal"/>

    <Button
        android:id="@+id/luas3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Luas Lingkaran"
        android:onClick="lLingkaran"/>

    <Button
        android:id="@+id/keliling3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Keliling Lingkaran"
        android:onClick="kLingkaran"/>

    <TextView
        android:id="@+id/hasill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:text="Hasil:"/>

    <EditText
        android:id="@+id/hasil3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:inputType="numberDecimal"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kembali"
        android:onClick="kembalil"/>


</LinearLayout>